<!DOCTYPE html>
<html lang="pt-BR">
    <%- include('includes/head'); %>
    <body>
        <%- include('includes/nav'); %>
        <div class="container">
            <div class="row">
                <div class="col-2"></div>
                <div class="col-8 my-3">
                    <h1 class="text-center">Login</h1>
                    <p class="text-center lead">Make a login or sign-in below.</p>

                    <%- include('includes/messages'); %>

                    <div class="row">
                        <div class="col my-3">
                            <h4>Sign-up</h4>
                            <form class="form-register" action="/login/register" method="POST">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                                <div class="mb-3">
                                    <label for="email" class="form-label">Email address</label>
                                    <input
                                        type="email"
                                        class="form-control"
                                        id="email"
                                        name="email"
                                        aria-describedby="emailHelp"
                                    />
                                </div>
                                <div class="mb-3">
                                    <label for="password" class="form-label">Password</label>
                                    <input type="password" class="form-control" id="password" name="password" />
                                </div>
                                <button type="submit" class="btn btn-primary">Create</button>
                            </form>
                        </div>
                        <div class="col my-3">
                            <h4>Sign-in</h4>
                            <form class="form-login" action="/login/login" method="POST">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                                <div class="mb-3">
                                    <label for="email" class="form-label">Email address</label>
                                    <input
                                        type="email"
                                        class="form-control"
                                        id="email"
                                        name="email"
                                        aria-describedby="emailHelp"
                                    />
                                </div>
                                <div class="mb-3">
                                    <label for="password" class="form-label">Password</label>
                                    <input type="password" class="form-control" id="password" name="password" />
                                </div>
                                <button type="submit" class="btn btn-primary">Access</button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-2"></div>
            </div>
        </div>
    </body>
    <%- include('includes/footer'); %>
</html>
